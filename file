#Stage 1: Compile and Build angular codebase

# Use official node image as the base image
FROM node:12.3.1-alpine AS builder

# Set the working directory
WORKDIR /home/chams/internship/internship-app-front/

# Add the source code to app
COPY ./ /home/chams/internship/internship-app-front/

# Install all the dependencies

RUN npm i @angular/cli --no-progress --loglevel=error
RUN npm i --only=production --no-progress --loglevel=error

#RUN npm install
#RUN npm config set user 0

#RUN npm config set unsafe-perm true

# Generate the build of the application
RUN npm run build

# Stage 2: Serve app with nginx server

# Use official nginx image as the base image
FROM nginx:latest

# Copy the build output to replace the default nginx contents.
COPY --from=builder /home/chams/internship/internship-app-front/dist /usr/share/nginx/html

# Expose port 80
EXPOSE 80
